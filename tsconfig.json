{
  "compilerOptions": {
    "strict": true,
    "target": "ES2019",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "@lightningtv/solid",
    "types": ["vite/client"],
    "noEmit": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "customConditions": ["@lightningtv/source"],
    "paths": {
      "theme": ["./node_modules/@lightningjs/l3-ui-theme-base"]
    },
  }
}
